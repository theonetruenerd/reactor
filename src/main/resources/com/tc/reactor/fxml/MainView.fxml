                <MenuItem fx:id="closeProjectMenuItem" mnemonicParsing="false" styleClass="root" text="Close Project" />
                <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" onAction="#onCloseMenuItemClick" styleClass="root" text="Close" />
            </items>
          </Menu>
          <Menu fx:id="editMenu" mnemonicParsing="false" styleClass="root" text="Edit">
            <items>
                <MenuItem fx:id="saveMenuItem" mnemonicParsing="false" styleClass="root" text="Save" />
              <MenuItem fx:id="deleteMenuItem" mnemonicParsing="false" styleClass="root" text="Delete" />
            </items>
          </Menu>
            <Menu fx:id="gitMenu" mnemonicParsing="false" styleClass="root" text="Git">
                <items>
                    <MenuItem fx:id="pullMenuItem" mnemonicParsing="false" styleClass="root" text="Pull" />
                    <MenuItem fx:id="commitMenuItem" mnemonicParsing="false" styleClass="root" text="Commit" />
                    <MenuItem fx:id="pushMenuItem" mnemonicParsing="false" styleClass="root" text="Push" />
                    <MenuItem fx:id="fetchMenuItem" mnemonicParsing="false" styleClass="root" text="Fetch" />
                    <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem fx:id="checkoutMenuItem" mnemonicParsing="false" styleClass="root" text="Checkout" />
                    <MenuItem fx:id="mergeMenuItem" mnemonicParsing="false" styleClass="root" text="Merge" />
                    <MenuItem fx:id="rebaseMenuItem" mnemonicParsing="false" styleClass="root" text="Rebase" />
                </items>
            </Menu>
          <Menu fx:id="helpMenu" mnemonicParsing="false" styleClass="root" text="Help">
            <items>
              <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" styleClass="root" text="About" />
                  <MenuItem fx:id="settingsMenuItem" mnemonicParsing="false" onAction="#onSettingsMenuItemClick" styleClass="root" text="Settings" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <VBox maxHeight="Infinity" maxWidth="Infinity" prefHeight="200.0" prefWidth="200.0" styleClass="root" stylesheets="@../css/styles.css" BorderPane.alignment="CENTER">
         <children>
            <TreeView fx:id="projectTree" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="200.0" styleClass="root" stylesheets="@../css/styles.css" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </left>
   <center>
      <TabPane fx:id="mainTabPane" maxHeight="Infinity" maxWidth="Infinity" prefHeight="257.0" prefWidth="501.0" styleClass="root" stylesheets="@../css/styles.css" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <TabPane fx:id="bottomTabPane" blendMode="MULTIPLY" maxHeight="Infinity" maxWidth="Infinity" prefHeight="111.0" prefWidth="600.0" stylesheets="@../css/styles.css" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab fx:id="terminalTab" closable="false" styleClass="root" text="Terminal">
            <content>
              <AnchorPane blendMode="MULTIPLY" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" styleClass="root" stylesheets="@../css/styles.css">
                     <children>
                        <TextArea fx:id="terminalTextArea" layoutX="1.0" prefHeight="80.0" prefWidth="1000.0" styleClass="root" stylesheets="@../css/styles.css" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                           <font>
                              <Font name="JetBrains Mono Regular" size="12.0" />
                           </font>
                        </TextArea>
                     </children>
              </AnchorPane>
            </content>
               <styleClass>
                  <String fx:value="root" />
                  <String fx:value="tab" />
               </styleClass>
          </Tab>
          <Tab fx:id="outputTab" closable="false" styleClass="root" text="Output">
            <content>
              <AnchorPane blendMode="MULTIPLY" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" styleClass="root" stylesheets="@../css/styles.css">
                     <children>
                        <TextArea fx:id="outputTextArea" layoutX="1.0" prefHeight="80.0" prefWidth="1000.0" stylesheets="@../css/styles.css" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                           <styleClass>
                              <String fx:value="root" />
                              <String fx:value="tab" />
                           </styleClass></TextArea>
                     </children>
              </AnchorPane>
            </content>
          </Tab>
            <Tab fx:id="logsTab" closable="false" text="Logs">
