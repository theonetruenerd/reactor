                <AnchorPane blendMode="MULTIPLY" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" styleClass="root" stylesheets="@../css/styles.css">
                     <children>
                        <TextArea fx:id="logsTextArea" layoutX="1.0" prefHeight="80.0" prefWidth="1000.0" stylesheets="@../css/styles.css" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                           <styleClass>
                              <String fx:value="root" />
                              <String fx:value="tab" />
                           </styleClass>
                        </TextArea>
                     </children>
                </AnchorPane>
              </content>
               <styleClass>
                  <String fx:value="root" />
                  <String fx:value="tab" />
               </styleClass>
            </Tab>
        </tabs>
         <styleClass>
            <String fx:value="tab" />
            <String fx:value="tab-header-area" />
            <String fx:value="tab-header-background" />
            <String fx:value="root" />
         </styleClass>
      </TabPane>
   </bottom>
</BorderPane>
